# ARK Deploy - Environment Variables Configuration
# Copy this file to .env and fill in your actual values

# ============================================
# Application Configuration
# ============================================
ARK_PORT=5050

# ============================================
# Redis Configuration
# ============================================
REDIS_URL=redis://redis:6379

# ============================================
# Jenkins Configuration
# ============================================
# Base URL of your Jenkins server
JENKINS_BASE_URL=http://jenkins.example.com:8080

# Jenkins username
JENKINS_USER=admin

# Jenkins API token (generate from Jenkins user settings)
JENKINS_API_TOKEN=your_jenkins_api_token_here

# Default Jenkins job name
JENKINS_JOB=default_job_name

# Default SSH user used by ARK when request does not provide ssh_user
ARK_DEFAULT_SSH_USER=root

# Optional map by target host: "100.90.208.85:SARA,100.103.96.26:razie"
ARK_SSH_USER_MAP=

# ============================================
# Tailscale Configuration
# ============================================
# Tailscale API key (generate from https://login.tailscale.com/admin/settings/keys)
# Format: tskey-api-xxxxxxxxxxxxx
TAILSCALE_API_KEY=tskey-api-xxxxxxxxxxxxx

# Tailscale tailnet (your email for personal, domain for organization)
# Find at: https://login.tailscale.com/admin/settings/general
TAILSCALE_TAILNET=example.com
